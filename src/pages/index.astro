---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- <div style={{ width: 200, height: 100 }}> -->
    <div class="background-dots">
      <h1 class="text-5xl font-bold z-10">About me</h1>
    </div>
    <!-- </div> -->
  </main>
</Layout>
<!-- <div class="background-dots">a</div> -->

<style>
  body {
  background: radial-gradient(circle, #f8f8f8, #e8e8e8) no-repeat, 
              radial-gradient(circle at 20% 30%, rgba(200, 200, 200, 0.7), transparent 70%) no-repeat, 
              conic-gradient(from 45deg, #ffffff, #e6e6e6, #d9d9d9, #ffffff) no-repeat;
  background-blend-mode: multiply, overlay, soft-light;
  background-size: 100% 100%, 400px 400px, 800px 800px;
  background-repeat: repeat, no-repeat, repeat;
  filter: blur(0.8px) contrast(1.1);
  height: 100vh;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: Arial, sans-serif;
}
  main {
    margin: auto;
    padding-top: 5rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .background-dots {
    display: flex;
    position: relative;
    width: 460px;
    height: 100px;
    text-align: right;
    border-end-end-radius: 80px;
    border-top-right-radius: 80px;
    align-items: center;
    justify-content: right;
    padding-right: 70px;
    padding-bottom: 8px;
    background: linear-gradient(to right, #5a47b8a8, #725dcd, #5a47b8a1);
    z-index: -1;
  }

  .background-dots::before {
    content: "";
    border-end-end-radius: 80px;
    border-top-right-radius: 80px;
    position: absolute;
    inset: 0;
    background-image: radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px);
    background-size:
      6px 6px,
      5px 5px,
      16px 16px,
      20px 20px;
    background-position: 0px 0px;
  }
</style>
