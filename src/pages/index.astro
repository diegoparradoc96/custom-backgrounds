---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- <div style={{ width: 200, height: 100 }}> -->
    <div class="background-dots">
      <h1 class="text-5xl font-bold z-10">About me</h1>
    </div>
    <!-- </div> -->
  </main>
</Layout>
<!-- <div class="background-dots">a</div> -->

<style>
  main {
    margin: auto;
    padding-top: 5rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .background-dots {
    display: flex;
    position: relative;
    width: 460px;
    height: 100px;
    text-align: right;
    border-end-end-radius: 80px;
    border-top-right-radius: 80px;
    align-items: center;
    justify-content: right;
    padding-right: 70px;
    padding-bottom: 8px;
    background: linear-gradient(to right, #5a47b8a8, #725dcd, #5a47b8a1);
    z-index: -1;
  }

  .background-dots::before {
    content: "";
    border-end-end-radius: 80px;
    border-top-right-radius: 80px;
    position: absolute;
    inset: 0;
    background-image: radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px),
      radial-gradient(#49417c 0.7px, transparent 0.7px);
    background-size:
      6px 6px,
      5px 5px,
      16px 16px,
      20px 20px;
    background-position: 0px 0px;
  }
</style>
